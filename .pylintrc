[MESSAGES CONTROL]
disable=missing-docstring, too-many-locals, too-many-arguments, too-many-branches,
        too-many-statements, broad-except, global-statement, logging-fstring-interpolation,
        invalid-name, global-at-module-level, global-variable-undefined,
        too-many-instance-attributes

[FORMAT]
max-line-length = 285

[BASIC]
variable-rgx=[a-z_][a-z0-9_]{0,30}$
function-rgx=[a-z_][a-z0-9_]{2,30}$
argument-rgx=variable-rgx
attr-rgx=variable-rgx
method-rgx=function-rgx

[TYPECHECK]
generated-members=cv2.*,PIL.*,Image.*
